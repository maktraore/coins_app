<div class= "container-fluid container">
<h2 class="middle_text ">Admins </h2>
  <table class='display' id='admins'>
    <thead >
      <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <% if current_user.super_admin %>
          <th>Delete user</th>
          <% end %>
      </tr>
    </thead>
    <tbody>
       
          <% User.all.each do |user| %>
     <tr>
          <td ><%= user.first_name %></td>
          <td ><%= user.last_name %></td>
          <td ><%= user.email%></td>
          <% if current_user.super_admin %>
          <td ><%= link_to 'delete', "/user/#{user.id}", method: :delete, data: {confirm: "Are you sure? You will not be able to undo it"}  %></td>
          
          <% end %>
     </tr> 
          <% end %>

    </tbody>
  
</table>

<h2 class="middle_text ">Recipients</h2>
<table  id='receivers' class="display ">
    <thead >
      <tr>
          <th></th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Cause</th>
          <th>Coin's number</th>
          <th>Location</th>
          <th>Giver's name</th>
          <th>Date</th>
          <th>Delete</th>
      </tr>
    </thead>
    <tbody>
       
          <% @receivers.each do |receiver| %>
     <tr>
          <td ></td>
          <td><%= receiver.first_name %></td>
          <td><%= receiver.last_name %></td>
          <td><%= receiver.email%></td>
          <td><%= receiver.race%></td>
          <td><%= receiver.coins%></td>
          <td><%= receiver.location%></td>
          <td><%= "#{receiver.giver_first_name} #{receiver.giver_last_name}"%></td>
          <td><%= receiver.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%b %e %Y, %l:%M %p") %></td>
          <td><%= link_to 'delete', "givers/#{receiver.id}", method: :delete, data: {confirm: "Are you sure? You will not be able to undo it"} %></td>
     </tr> 
          <% end %>

    </tbody>
  
</table>
</div>


<div class="middle_text container">
  <% if current_user && current_user.admin %>
    <div class="row">
      <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="white"> Edit Admin </h2>
              <div class="well">
                  <%= form_for(resource, as: @receiver, url: "/admins/#{@user.id}", html: { method: :patch }) do |f| %>
                  <% if  resource.errors.any? %>
                      <div class="alert alert-danger">                
                      <%= devise_error_messages! %>
                      </div>
                  <% end %>

                  <div class="form-group">
                    <%= f.label :first_name %><br />
                    <%= f.text_field :first_name, value: @user.first_name, name: :first_name, autofocus: true %>
                  </div>

                  <div class="form-group">
                    <%= f.label :last_name %><br />
                    <%= f.text_field :last_name, value: @user.last_name, name: :last_name, autofocus: true %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, value: @user.email, name: :email, autofocus: true %>
                  </div>  

                  <div class="form-group">
                        <label>Admin:</label>
                              <select name="admin" required>
                                <option > <%= @user.admin %> </option>
                                  <option ><%= !@user.admin %></option>            
                              </select>
                 </div>

                 <div class="form-group">
                        <label>Super Admin:</label>
                              <select name="super_admin" required>
                                <option > <%= @user.super_admin %> </option>
                                  <option ><%= !@user.super_admin %></option>          
                              </select>
                 </div>

                  <br />

                  <button class="btn btn-success">Submit</button>

                  <% end %>

              </div>
          </div>
  <% else %>
      Stop Hacking!!!!!
       </div>

  <% end %>
</div>  
